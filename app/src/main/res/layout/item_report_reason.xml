<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vh"
            type="com.example.taxipot_android.presenter.ui.adapter.ReportReasonAdapter.ReportReasonViewHolder" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="64dp">
    <CheckBox
        android:id="@+id/report_reason_checkreason_cb"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checked="false"
        android:onClick="@{vh::check}"
        android:drawableLeft="@drawable/view_select_report_reason"
        android:drawablePadding="8dp"
        android:button="@null"
        android:paddingLeft="5dp"
        android:text="말이 너무 많아요"
        android:paddingBottom="16dp"
        android:textSize="17sp"
        android:textColor="@android:color/white" />
</LinearLayout>
</layout>