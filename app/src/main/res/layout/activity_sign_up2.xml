<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.example.taxipot_android.presenter.ui.activity.SignUp2Activity" />
        <variable
            name="vm"
            type="com.example.taxipot_android.presenter.viewModel.SignUp2ViewModel" />
        <import type="androidx.core.content.ContextCompat"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradation"
        tools:context=".presenter.ui.activity.SignUp2Activity">

        <View
            android:id="@+id/view3"
            android:layout_width="30dp"
            android:layout_height="5dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="68dp"
            android:background="@color/barColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="2dp"
            android:text="TaxiPot"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintStart_toEndOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@+id/view3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="SignUp"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <View
            android:id="@+id/view6"
            android:layout_width="130dp"
            android:layout_height="6dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="150dp"
            android:background="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view8"
            android:layout_width="10dp"
            android:layout_height="2dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="200dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="190dp"
            android:text="성별"
            android:textColor="@color/barColor"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view9"
            android:layout_width="10dp"
            android:layout_height="2dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="190dp"
            android:text="나이"
            android:textColor="@color/barColor"
            app:layout_constraintStart_toEndOf="@+id/view9"
            app:layout_constraintTop_toTopOf="parent" />


        <CheckBox
            android:id="@+id/signup2_gender_is_man_rb"
            android:layout_width="32dp"
            android:layout_height="27dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/view_select_gender"
            android:button="@null"
            android:text="   남"
            android:textColor="@color/barColor"
            android:checked="@={vm.canMan}"
            app:layout_constraintStart_toStartOf="@+id/view8"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <CheckBox
            android:id="@+id/signup2_gender_is_woman_rb"
            android:layout_width="32dp"
            android:layout_height="27dp"
            android:background="@drawable/view_select_gender"
            android:layout_marginStart="12dp"
            android:button="@null"
            android:text="   여"
            android:textColor="@color/barColor"
            android:checked="@={vm.canWoman}"
            app:layout_constraintStart_toEndOf="@+id/signup2_gender_is_man_rb"
            app:layout_constraintTop_toTopOf="@+id/signup2_gender_is_man_rb" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/appCompatEditText2"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="00"
            android:textSize="16sp"
            android:textColor="@color/barColor"
            android:theme="@style/ageEditTextStyle"
            app:layout_constraintStart_toStartOf="@+id/view9"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/appCompatEditText3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="37dp"
            android:hint="사용할 닉네임을 입력하세요"
            android:inputType="text"
            android:paddingLeft="4dp"
            android:paddingBottom="15dp"
            android:textColor="#FFFFFF"
            android:theme="@style/idEditTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatEditText2" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/appCompatEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="36dp"
            android:hint="핸드폰 번호를 입력하세요"
            android:inputType="phone"
            android:textColor="#FFFFFF"
            android:theme="@style/idEditTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatEditText3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>